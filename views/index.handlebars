<section class ="py-2">
<div class="row">
    <div class="col-md-6 text-center">
        <h1 class="display-3 mt-3 pt-5">
            Graphics Card Store
        </h1> <p class="lead"><a href= 'cart'>Shopping Cart</a></p>
        
<h1>{{title}}</h1>

{{# each products }}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
            <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} USD</div>
              <a href="/add/{{ this.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
